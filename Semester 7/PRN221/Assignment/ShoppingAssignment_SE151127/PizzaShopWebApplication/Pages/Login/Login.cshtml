@page
@model PizzaShopWebApplication.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h3>Login Form</h3>
@Model.Msg
<form method="post" asp-page="Index">
    <table>
        <tr>
            <td>Email</td>
            <td><input required type="text" asp-for="@Model.Email" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input required type="password" asp-for="@Model.Password" /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form>