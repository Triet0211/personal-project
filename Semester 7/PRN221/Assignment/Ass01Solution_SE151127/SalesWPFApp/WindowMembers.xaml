<Window x:Class="SalesWPFApp.WindowMembers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="WindowMembers" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Height="100" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="lbWelcomeMember" Content="Welcome " Height="76" FontSize="40"/>
                <Button Name="btnLogout" Content="Logout" Width="200" Margin="40,20" FontSize="25" Click="btnLogout_Click"/>
            </StackPanel>
            <Button Name="btnEditProfile" Content="Edit Profile" Height="60" FontSize="30" Margin="50,20" Click="btnEditProfile_Click"/>
            <Button Name="btnShopping" Content="Shopping" Height="60" FontSize="30" Margin="50,20" Click="btnShopping_Click"/>
            <Button Name="btnOrder" Content="View Order" Height="60" FontSize="30" Margin="50,20" Click="btnOrder_Click"/>
        </StackPanel>
        <Label Content="Label" HorizontalAlignment="Left" Margin="858,400,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
