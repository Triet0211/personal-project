<Window x:Class="SalesWPFApp.WindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="WindowAdmin" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Height="100" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label x:Name="lbWelcomeAdmin" Content="Welcome Administrator" Height="76" FontSize="40"/>
                <Button Name="btnLogout" Content="Logout" Width="200" Margin="40,20" FontSize="25" Click="btnLogout_Click"/>
            </StackPanel>
            <Button x:Name="btnManageProduct" Content="Product Management" Height="70" Margin="20,20" FontSize="30" Click="btnManageProduct_Click"/>
            <Button x:Name="btnManageUser" Content="Member Management" Height="70" Margin="20,20" FontSize="30" Click="btnManageUser_Click"/>
            <Button x:Name="btnManageOrder" Content="Order Management" Height="70" Margin="20,20" FontSize="30" Click="btnManageOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>
